{
	"info": {
		"_postman_id": "b5e8f9b9-9b9b-9b9b-9b9b-9b9b9b9b9b9b",
		"name": "HubSpot Integration API",
		"description": "API de Integração com HubSpot",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Generate Authorization URL",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"clientId\": \"0117d33c-e9ff-4969-909a-a3ce50b0779e\",\n    \"redirectUri\": \"http://localhost:8080/api/v1/auth/callback\",\n    \"scope\": \"contacts\",\n    \"state\": \"{{$randomUUID}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/url",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "url"]
						},
						"description": "Gera uma URL para redirecionamento ao HubSpot para autenticação"
					}
				},
				{
					"name": "Auth Callback",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/auth/callback?code={{code}}&state={{state}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "auth", "callback"],
							"query": [
								{
									"key": "code",
									"value": "{{code}}"
								},
								{
									"key": "state",
									"value": "{{state}}"
								}
							]
						},
						"description": "Endpoint de callback após autenticação no HubSpot"
					}
				}
			]
		},
		{
			"name": "Contacts",
			"item": [
				{
					"name": "Create Contact",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"firstName\": \"Test\",\n    \"lastName\": \"User\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/contacts",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "contacts"]
						},
						"description": "Cria um novo contato no HubSpot"
					}
				},
				{
					"name": "Get Contact by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/contacts/123",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "contacts", "123"]
						},
						"description": "Busca um contato específico pelo ID"
					}
				},
				{
					"name": "Get All Contacts",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/contacts",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "contacts"]
						},
						"description": "Lista todos os contatos"
					}
				},
				{
					"name": "Update Contact",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"id\": \"123\",\n    \"email\": \"updated@example.com\",\n    \"firstName\": \"Updated\",\n    \"lastName\": \"User\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/contacts/123",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "contacts", "123"]
						},
						"description": "Atualiza um contato existente"
					}
				},
				{
					"name": "Delete Contact",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/contacts/123",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "contacts", "123"]
						},
						"description": "Remove um contato do HubSpot"
					}
				}
			]
		}
	]
} 